// WiFi credentials with fallback support
// The device will try each network in order until one connects
// Add or remove networks as needed

#define NUM_WIFI_NETWORKS 3
struct WiFiNetwork {
  const char* ssid;
  const char* password;
};

static const WiFiNetwork wifi_networks[NUM_WIFI_NETWORKS] = {
  {"YOUR_PRIMARY_SSID", "YOUR_PRIMARY_PASSWORD"},      // Primary network
  {"YOUR_FALLBACK_SSID_1", "YOUR_FALLBACK_PASSWORD_1"}, // Fallback network 1
  {"YOUR_FALLBACK_SSID_2", "YOUR_FALLBACK_PASSWORD_2"}  // Fallback network 2 (can be open network with empty password)
};

