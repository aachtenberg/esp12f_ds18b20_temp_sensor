#ifndef SECRETS_H
#define SECRETS_H

// WiFi credentials with fallback support
// The device will try each network in order until one connects
// Add or remove networks as needed

#define NUM_WIFI_NETWORKS 3
struct WiFiNetwork {
  const char* ssid;
  const char* password;
};

static const WiFiNetwork wifi_networks[NUM_WIFI_NETWORKS] = {
  {"YOUR_PRIMARY_SSID", "YOUR_PRIMARY_PASSWORD"},      // Primary network
  {"YOUR_FALLBACK_SSID_1", "YOUR_FALLBACK_PASSWORD_1"}, // Fallback network 1
  {"YOUR_FALLBACK_SSID_2", "YOUR_FALLBACK_PASSWORD_2"}  // Fallback network 2 (can be open network with empty password)
};

// Legacy support (for backward compatibility)
static const char* WIFI_SSID = "YOUR_PRIMARY_SSID";
static const char* WIFI_PASSWORD = "YOUR_PRIMARY_PASSWORD";

// Page title (customize per device)
static const char* PAGE_TITLE = "Temperature Sensor";

// Static IP configuration (comment out or leave empty to use DHCP)
static const char* STATIC_IP = "";      // e.g., "192.168.1.100"
static const char* STATIC_GATEWAY = ""; // e.g., "192.168.1.1"
static const char* STATIC_SUBNET = "";  // e.g., "255.255.255.0"
static const char* STATIC_DNS = "";     // e.g., "8.8.8.8"

// MQTT configuration (device publishes JSON to esp-sensor-hub/{device}/... topics)
static const char* MQTT_BROKER = "YOUR_MQTT_BROKER_IP";  // MQTT broker IP (e.g., Raspberry Pi)
static const int MQTT_PORT = 1883;
static const char* MQTT_USER = "";       // Optional
static const char* MQTT_PASSWORD = "";   // Optional

// OTA (Over-The-Air) Update configuration
static const char* OTA_PASSWORD = "your-secure-ota-password";  // Change this! Used for OTA firmware updates
static const char* OTA_HOSTNAME_PREFIX = "temp-sensor-";       // Will append chip ID (e.g., temp-sensor-a1b2c3d4)

#endif // SECRETS_H
